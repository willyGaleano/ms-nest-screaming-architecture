{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@root/(.*)$": "<rootDir>/../$1",
    "^@health/(.*)$": "<rootDir>/apps/health/$1",
    "^@user/(.*)$": "<rootDir>/apps/user/$1",
    "^@notification/(.*)$": "<rootDir>/apps/notification/$1",
    "^@common/(.*)$": "<rootDir>/common/$1",
    "^@config/(.*)$": "<rootDir>/infrastructure/config/$1",
    "^@context-store/(.*)$": "<rootDir>/infrastructure/context-store/$1",
    "^@logger/(.*)$": "<rootDir>/infrastructure/logger/$1",
    "^@cache/(.*)$": "<rootDir>/infrastructure/cache/$1",
    "^@db/(.*)$": "<rootDir>/infrastructure/db/$1",
    "^@http-client/(.*)$": "<rootDir>/infrastructure/http-client/$1",
    "^@security/(.*)$": "<rootDir>/infrastructure/security/$1",
    "^@broker/(.*)$": "<rootDir>/infrastructure/broker/$1",
    "^@third-party/(.*)$": "<rootDir>/infrastructure/third-party/$1"
  }
}
